<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".SimpleCalcActivity">

    <Button
        android:id="@+id/mainMenu"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="MENU"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="3"
        android:fontFamily="@font/alfa_slab_one"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workingsTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:fontFamily="@font/alfa_slab_one"
            android:paddingRight="30dp"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:fontFamily="@font/alfa_slab_one"
            android:paddingRight="30dp"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="39sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="clearOnClick"
                android:text="C"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="lefBracketOnCLick"
                android:text="("
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="rightBracketOnClick"
                android:text=")"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="divisionOnClick"
                android:text="/"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="powerOfOnClick"
                android:text="^"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="sqrtOnClick"
                android:text="sqrt"
                android:fontFamily="@font/alfa_slab_one"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:onClick="sevenOnClick"
                android:text="7"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:onClick="eightOnClick"
                android:text="8"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:onClick="nineOnClick"
                android:text="9"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="timesOnClick"
                android:text="X"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="lnOnClick"
                android:text="ln"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="sinusOnClick"
                android:text="sin"
                android:fontFamily="@font/alfa_slab_one"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:onClick="fourOnClick"
                android:text="4"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:onClick="fiveOnClick"
                android:text="5"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:onClick="sixOnClick"
                android:text="6"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="minusOnClick"
                android:text="-"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="logOnClick"
                android:text="log"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="cosinusOnClick"
                android:text="cos"
                android:fontFamily="@font/alfa_slab_one"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:onClick="oneOnClick"
                android:text="1"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="2"
                android:onClick="twoOnClick"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="3"
                android:onClick="threeOnClick"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:onClick="plusOnClick"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="percentOnClick"
                android:text="%"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="tangensOnClick"
                android:text="tan"
                android:fontFamily="@font/alfa_slab_one"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="."
                android:onClick="decimalOnClick"
                android:fontFamily="@font/alfa_slab_one"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="0"
                android:onClick="zeroOnClick"
                android:fontFamily="@font/alfa_slab_one"/>


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:text="="
                android:onClick="equalsOnClick"
                android:fontFamily="@font/alfa_slab_one"/>

        </LinearLayout>




    </LinearLayout>


</LinearLayout>